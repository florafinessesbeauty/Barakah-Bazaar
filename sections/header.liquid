<header class="header" role="banner">
  <div class="container header__inner">
    <a href="{{ routes.root_url }}" class="logo">
      {% if settings.logo %}
        <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ settings.logo_alt | escape }}" width="100" height="40" loading="eager">
      {% else %}
        {{ settings.brand_name | default: shop.name }}
      {% endif %}
    </a>

    <button class="nav__toggle" aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">Menu</button>

    <nav class="nav" id="navMenu" role="navigation" aria-label="Main menu">
      <ul style="list-style:none;display:flex;gap:1rem;margin:0;padding:0;flex-wrap:wrap">
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div class="header__right">
      <a href="{{ routes.cart_url }}">Cart ({{ cart.item_count }})</a>
    </div>
  </div>
</header>
