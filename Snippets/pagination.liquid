{% if paginate.pages > 1 %}
<nav class="pagination" role="navigation" aria-label="Pagination">
  <ul class="pagination__list">
    {% if paginate.previous %}
      <li><a href="{{ paginate.previous.url }}" class="pagination__prev" rel="prev">← Previous</a></li>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
        <li><a href="{{ part.url }}">{{ part.title }}</a></li>
      {% else %}
        <li class="{% if part.title == paginate.current_page %}is-active{% endif %}">{{ part.title }}</li>
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
      <li><a href="{{ paginate.next.url }}" class="pagination__next" rel="next">Next →</a></li>
    {% endif %}
  </ul>
</nav>
{% endif %}
